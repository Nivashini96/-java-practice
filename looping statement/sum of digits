import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner scan=new Scanner(System.in);
        int N=scan.nextInt();
        int sum=0;
        if(N<0)
        {
            N=N*(-1);
            
        }while(N!=0){
            int digit=N%10;
            sum+=digit;
            N=N/10;
            
            
        }System.out.println(sum);
    }
}
